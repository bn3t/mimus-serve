{
  "env": {
    "es6": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2019,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "ignorePatterns": [
    ".eslintrc.js",
    "prettier.config.js",
    "babel.config.js"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off"
  }
}