{
  "name": "@bn3t/mimus-serve",
  "version": "1.2.0",
  "description": "Mimus Serve - serve mock data",
  "author": "Bernard Niset",
  "license": "MIT",
  "keywords": [
    "mock",
    "server",
    "mock-server",
    "node",
    "fastify",
    "rest",
    "api"
  ],
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/bn3t/mimus-serve"
  },
  "bugs": {
    "url": "https://gitlab.com/bn3t/mimus-serve/-/issues"
  },
  "homepage": "https://gitlab.com/bn3t/mimus-serve/-/wikis/home",
  "main": "dist/main.js",
  "bin": {
    "mimus-serve": "./dist/main.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build:check": "tsc -p ./tsconfig-check.json",
    "build:copy-ui": "cpx '../mimus-serve-ui/dist/**' ./dist/public",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline --ignore \"src/**/*.spec.ts\",\"src/**/*.test.ts\"",
    "build:types": "tsc --emitDeclarationOnly -p ./tsconfig-prod.json",
    "build": "npm run build:check && npm run build:types && npm run build:js && npm run build:copy-ui",
    "clean": "rimraf dist node_modules coverage junit.xml",
    "dev": "ts-node src/main.ts --files ./test-data/files --mappings ./test-data/mappings --datasets ./test-data/datasets",
    "dev:config-cors": "ts-node src/main.ts --config ./test-data/configuration-cors.yaml",
    "dev:config": "ts-node src/main.ts --config ./test-data/configuration.yaml",
    "dev:no-params": "ts-node src/main.ts",
    "lint": "eslint --ext ts,js src",
    "lint:fix": "eslint --ext ts,js --fix src",
    "ncu": "ncu -u",
    "preversion": "npm run build && npm run test:ci",
    "start": "node dist/main.js",
    "start:integration:options": "node dist/main.js --files ./test-data/files --mappings ./test-data/mappings --datasets ./test-data/datasets",
    "start:integration:config": "node dist/main.js -c ./test-data/configuration.yaml",
    "test:ci": "jest --coverage --testPathPattern=src",
    "test:watch": "jest --watch --testPathPattern=src",
    "test": "jest --testPathPattern=src",
    "test:integration": "jest -i --watch --testPathPattern=test-integration",
    "test:integration:nowatch": "jest -i --testPathPattern=test-integration",
    "test:integration:ci": "start-server-and-test start:integration:options http://localhost:4000 test:integration:nowatch && start-server-and-test start:integration:config http://localhost:4000 test:integration:nowatch",
    "type-check:watch": "npm run type-check -- --watch",
    "type-check": "tsc --noEmit",
    "version": "standard-version --skip.tag --tag-prefix ''"
  },
  "dependencies": {
    "@babel/runtime": "^7.20.0",
    "@bn3t/mimus-serve-ui": "*",
    "@fastify/cookie": "^8.3.0",
    "@fastify/cors": "^8.1.1",
    "@fastify/static": "^6.5.0",
    "@fastify/swagger": "^8.1.0",
    "axios": "^1.1.3",
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "dotenv": "^16.0.3",
    "fastify": "^4.9.2",
    "handlebars": "^4.7.7",
    "js-yaml": "^4.1.0",
    "jsonata": "^1.8.6",
    "jsonfile": "^6.1.0",
    "jsonpath-plus": "^7.2.0",
    "ramda": "^0.28.0",
    "recursive-readdir": "^2.2.3",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.19.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.19.4",
    "@babel/plugin-transform-runtime": "^7.19.6",
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/jest": "^29.2.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonfile": "^6.1.0",
    "@types/node": "^18.11.7",
    "@types/ramda": "^0.28.18",
    "@types/recursive-readdir": "^2.2.1",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "conventional-changelog-cli": "^2.2.2",
    "cpx": "^1.5.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "jest-junit": "^14.0.1",
    "npm-check-updates": "^16.3.15",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "standard-version": "^9.5.0",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "cobertura"
    ]
  }
}
