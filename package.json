{
  "name": "dream-mock-server",
  "version": "0.0.1",
  "description": "Dream Mock Server - serve mock data",
  "main": "build/main.js",
  "scripts": {
    "build:check": "tsc -p ./tsconfig-check.json",
    "build:js": "babel src --out-dir build --extensions \".ts,.tsx\" --source-maps inline --ignore \"src/**/*.spec.ts\",\"src/**/*.test.ts\"",
    "build:types": "tsc --emitDeclarationOnly -p ./tsconfig-prod.json",
    "build": "npm run lint && npm run build:check && npm run build:types && npm run build:js",
    "clean": "rimraf build coverage node_modules junit.xml",
    "dev": "ts-node src/main.ts",
    "lint": "eslint --ext ts,js --fix src",
    "ncu": "ncu -u",
    "preversion": "npm run build && npm run test:ci",
    "start": "node build/main.js",
    "test:ci": "jest --coverage --testPathPattern=src",
    "test": "jest --watch --testPathPattern=src",
    "test:integration": "jest --watch --testPathPattern=test-integration",
    "test:integration:nowatch": "jest --testPathPattern=test-integration",
    "test:integration:ci": "start-server-and-test start http://localhost:4000 test:integration:nowatch",
    "type-check:watch": "npm run type-check -- --watch",
    "type-check": "tsc --noEmit",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0"
  },
  "author": "You",
  "license": "MIT",
  "dependencies": {
    "command-line-args": "^5.2.1",
    "command-line-usage": "^6.1.3",
    "dotenv": "^16.0.1",
    "fastify": "^4.5.3",
    "jsonfile": "^6.1.0",
    "ramda": "^0.28.0",
    "recursive-readdir": "^2.2.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.18.10",
    "@babel/core": "^7.18.10",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/plugin-transform-runtime": "^7.18.10",
    "@babel/preset-env": "^7.18.10",
    "@babel/preset-typescript": "^7.18.6",
    "@types/command-line-args": "^5.2.0",
    "@types/command-line-usage": "^5.0.2",
    "@types/jest": "^28.1.6",
    "@types/jsonfile": "^6.1.0",
    "@types/node": "^18.7.8",
    "@types/ramda": "^0.28.15",
    "@types/recursive-readdir": "^2.2.1",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "axios": "^0.27.2",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.0",
    "jest-junit": "^14.0.0",
    "npm-check-updates": "^16.0.5",
    "pino-pretty": "^9.1.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "start-server-and-test": "^1.14.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "jest": {
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageReporters": [
      "html",
      "text",
      "text-summary",
      "cobertura"
    ]
  }
}
