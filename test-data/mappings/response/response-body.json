{
  "mappings": [
    {
      "request": {
        "urlPath": "/request-body",
        "method": "POST",
        "bodyPatterns": [
          {
            "equalTo": "[\"WireMock\"]"
          }
        ]
      },
      "response": {
        "status": 200,
        "body": "Request body patterns equalTo works"
      }
    },
    {
      "request": {
        "urlPath": "/request-body",
        "method": "POST",
        "bodyPatterns": [
          {
            "equalTo": "test=value"
          }
        ]
      },
      "response": {
        "status": 200,
        "body": "Request body patterns equalTo works test=value"
      }
    },
    {
      "request": {
        "urlPath": "/request-body",
        "method": "POST",
        "bodyPatterns": [
          {
            "equalToJson": "{\"a\":1}"
          }
        ]
      },
      "response": {
        "status": 200,
        "body": "Request body patterns equalToJson works"
      }
    },
    {
      "request": {
        "urlPath": "/request-body",
        "method": "POST",
        "bodyPatterns": [
          {
            "matchesJsonPath": "$.name"
          }
        ]
      },
      "response": {
        "status": 200,
        "body": "Request body patterns match json path works"
      }
    },
    {
      "request": {
        "urlPath": "/request-body/templated",
        "method": "GET"
      },
      "response": {
        "status": 200,
        "body": "transformed: {{request.pathSegments.[1]}}",
        "transformers": ["response-template"]
      }
    },
    {
      "request": {
        "urlPath": "/request-body/not-templated",
        "method": "GET"
      },
      "response": {
        "status": 200,
        "body": "{{request.path.[0]}}"
      }
    }
  ]
}
