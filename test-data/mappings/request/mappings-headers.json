{
  "mappings": [
    {
      "request": {
        "urlPath": "/headers",
        "method": "GET",
        "headers": {
          "X-myheader": {
            "equalTo": "WireMock"
          }
        }
      },
      "response": {
        "status": 200,
        "body": "headers equalTo works"
      }
    },
    {
      "request": {
        "urlPath": "/headers",
        "method": "GET",
        "headers": {
          "X-myheader": {
            "matches": "^Dream.*"
          }
        }
      },
      "response": {
        "status": 200,
        "body": "headers matches works"
      }
    },
    {
      "request": {
        "urlPath": "/headers-for-does-not-match",
        "method": "GET",
        "headers": {
          "X-myheader": {
            "doesNotMatch": "^everything.*"
          }
        }
      },
      "response": {
        "status": 200,
        "body": "headers does not match works"
      }
    },
    {
      "request": {
        "urlPath": "/headers",
        "method": "GET",
        "headers": {
          "X-myheader": {
            "matches": "^Another.*",
            "caseInsensitive": true
          }
        }
      },
      "response": {
        "status": 200,
        "body": "headers matches case insensitive works"
      }
    },
    {
      "request": {
        "urlPath": "/headers",
        "method": "GET",
        "headers": {
          "X-myheader": {
            "contains": "word"
          }
        }
      },
      "response": {
        "status": 200,
        "body": "headers contains works"
      }
    },
    {
      "request": {
        "urlPath": "/headers-for-absent",
        "method": "GET",
        "headers": {
          "X-myheader": {
            "absent": true
          }
        }
      },
      "response": {
        "status": 200,
        "body": "headers absent works"
      }
    },
    {
      "request": {
        "urlPath": "/headers-for-present",
        "method": "GET",
        "headers": {
          "X-myheader": {
            "present": true
          }
        }
      },
      "response": {
        "status": 200,
        "body": "headers present works"
      }
    }
  ]
}
